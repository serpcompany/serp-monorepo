# Project Code Conventions

## File Matching Patterns

globs:
  # Core application files
  - "apps/**/*.{js,ts,vue,md,json}"
  - "packages/**/*.{js,ts,vue,md,json}"
  
  # Configuration files
  - "**/*config.{ts,js,mjs}"
  - "**/tsconfig.json"
  - "**/tailwindcss.config.ts"
  - "**/drizzle.config.ts"
  


# Linting Rules

linting:
  eslint:
    config_strategy: "per-package"
    base_config: "eslint:recommended"
    framework_config: "@nuxt/eslint-config"
    overrides:
      - pattern: "apps/*/eslint.config.mjs"
        config: "local"
      - pattern: "packages/*/eslint.config.mjs"
        config: "local"
      - pattern: "packages/configs/eslint/**"
        config: "shared"
    rules:
      vue:
        - "plugin:vue/recommended"
      typescript:
        - "@typescript-eslint/recommended"
      nuxt:
        - "@nuxt/eslint-config"


# Formatting Rules

formatting:
  prettier:
    config_strategy: "cascade"
    base_config: ".prettierrc"
    package_configs: "packages/configs/prettier/**"
    options:
      semi: true
      singleQuote: true
      trailingComma: "none"
      printWidth: 100
      vueIndentScriptAndStyle: true
    ignored_patterns:
      - "**/*.md"
      - "**/CHANGELOG.md"
      - "**/package.json"
      - "**/pnpm-lock.yaml"


# Editor Conventions

editor:
  config_file: ".editorconfig"
  defaults:
    indent_style: space
    indent_size: 2
    end_of_line: lf
    charset: utf-8
    trim_trailing_whitespace: true
    insert_final_newline: true
  overrides:
    "*.md":
      trim_trailing_whitespace: false
    "*.json":
      indent_size: 2
    "*.yml":
      indent_size: 2


# Project Structure

structure:
  apps:
    required_files:
      - "app.config.ts"
      - "nuxt.config.ts"
      - "tailwindcss.config.ts"
      - "drizzle.config.ts"
    conventions:
      pages: "kebab-case"
      components: "PascalCase"
      composables: "camelCase"
  
  packages:
    types:
      patterns:
        - "**/*.d.ts"
    ui:
      component_prefix: "Serp"
    utils:
      naming: "camelCase"
